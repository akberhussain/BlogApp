<% include ./partials/header %>

<div class = "ui main text container">
    <div id = "title" class = "ui huge header">Awesome Blog Site</div>
    <div class = "ui top attached segment">
        <div class = "ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class = "item">
                    <div class = "image">
                        <img src = "<%= blog.image %>">
                    </div>
                    <div class = "content">
                        <a href = "/blogs/<%=blog._id %>" class = "header"> <%= blog.title %> </a>
                        <div class = "description">
                            <p> <%- blog.body.substring(0,100) %> </p>
                        </div>
                        <div class = "meta">
                            <span>Created: <%= blog.created.toDateString() %> </span>
                        </div>
                        <div class = "extra">
                            <a class = "ui floated basic violet button" href ="/blogs/<%=blog._id %>">Read More
                            <i class = "right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>




<% include ./partials/header %>