<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class = "ui huge header"> <%= blog.title %>
        <hr>
    </div>
    <div class = "ui top attached ">
        <div class = "item">
            <img class = "ui centered rounded image" src = "<%= blog.image %>">
        </div>
        <div class = "description">
            <p> <%- blog.body %></p>  
        </div>
        <div class = "content">
            <span>Created: <%= blog.created.toDateString() %> </span>
        </div>
        <br>
            <a class = "ui orange basic button big" href = "/blogs/<%= blog._id %>/edit">Edit Post</a>
        <form id = "deleteForm" action = "/blogs/<%= blog._id %>?_method=DELETE" method = "POST" >
                <button class = "ui red big basic button">Delete Post</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>
